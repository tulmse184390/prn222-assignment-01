@{
    ViewBag.Title = "Lịch hẹn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px;
    }

    .btn-create {
        padding: 6px 12px;
        border: none;
        background: #007bff;
        color: #fff;
        border-radius: 4px;
        cursor: pointer;
    }

    .appointments-container {
        display: flex;
        gap: 20px;
    }

    /* Calendar */
    .calendar {
        flex: 2;
        border: 1px solid #ddd;
        border-radius: 6px;
        padding: 10px;
    }

    .calendar-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 10px;
    }

    .calendar-grid {
        display: grid;
        grid-template-columns: repeat(7, 1fr);
        gap: 4px;
    }

    .day {
        text-align: center;
        font-weight: bold;
        padding: 6px;
        background: #f4f4f4;
        border-radius: 4px;
    }

    .date-cell {
        min-height: 60px;
        border: 1px solid #eee;
        padding: 4px;
        font-size: 14px;
        position: relative;
    }

        .date-cell.has-event {
            background: #e9f5ff;
            border-color: #007bff;
        }

    .event {
        display: block;
        font-size: 12px;
        color: #007bff;
        margin-top: 4px;
    }

    /* Upcoming list */
    .upcoming {
        flex: 1;
        border: 1px solid #ddd;
        border-radius: 6px;
        padding: 10px;
        background: #fafafa;
    }

        .upcoming h3 {
            margin-bottom: 10px;
        }

        .upcoming ul {
            list-style: none;
            padding: 0;
        }

        .upcoming li {
            padding: 8px;
            border-bottom: 1px solid #eee;
            font-size: 14px;
        }

    .btn-detail {
        float: right;
        padding: 2px 6px;
        font-size: 12px;
        border: 1px solid #007bff;
        background: #fff;
        color: #007bff;
        border-radius: 3px;
        cursor: pointer;
    }
</style>

<div class="page-header">
    <h2>Quản lý lịch hẹn lái thử</h2>
    <button class="btn-create">+ Tạo lịch hẹn</button>
</div>

<div class="appointments-container">
    <!-- Calendar -->
    <div class="calendar">
        <div class="calendar-header">
            <button>&lt;</button>
            <span>Tháng 9 / 2025</span>
            <button>&gt;</button>
        </div>

        <div class="calendar-grid">
            <!-- Header -->
            <div class="day">T2</div>
            <div class="day">T3</div>
            <div class="day">T4</div>
            <div class="day">T5</div>
            <div class="day">T6</div>
            <div class="day">T7</div>
            <div class="day">CN</div>

            <!-- Ngày thường -->
            <div class="date-cell">1</div>
            <div class="date-cell">2</div>

            <!-- Ngày có sự kiện -->
            <div class="date-cell has-event">
                3
                <div class="event-dot"></div>
                <div class="event-tooltip">
                    <strong>09:00 - A. Nam</strong><br>
                    Xe: VinFast VF8 (Đỏ)<br>
                    Trạng thái: Confirmed
                </div>
            </div>

            <div class="date-cell">4</div>

            <div class="date-cell has-event">
                5
                <div class="event-dot"></div>
                <div class="event-tooltip">
                    <strong>14:00 - C. Hoa</strong><br>
                    Xe: VinFast VF9 (Trắng)<br>
                    Trạng thái: Pending
                </div>
            </div>

            <div class="date-cell">6</div>
            <div class="date-cell">7</div>
        </div>
    </div>

    <!-- Upcoming Appointments -->
    <div class="upcoming">
        <h3>Lịch hẹn sắp diễn ra</h3>
        <ul>
            <li>
                <span class="time">26/09 09:00</span> -
                <span class="customer">A. Nam</span> - VinFast VF8 (Đỏ)
                <button class="btn-detail">Chi tiết</button>
            </li>
            <li>
                <span class="time">26/09 14:00</span> -
                <span class="customer">C. Hoa</span> - VinFast VF9 (Trắng)
                <button class="btn-detail">Chi tiết</button>
            </li>
        </ul>
    </div>
</div>