@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="login-box">
    <h2>Đăng nhập Staff</h2>

    @if (ViewBag.Error != null)
    {
        <div class="error-message">
            @ViewBag.Error
        </div>
    }

    <form asp-action="Login" method="post">
        <div class="form-group" style="margin-bottom:15px;">
            <label for="email">Email</label>
            <input id="email" type="email" name="Email" class="form-control" required />
        </div>

        <div class="form-group" style="margin-bottom:15px;">
            <label for="password">Mật khẩu</label>
            <input id="password" type="password" name="Password" class="form-control" required />
        </div>

        <button type="submit" class="btn-login" style="width:100%; padding:10px; background:#007bff; border:none; border-radius:8px; color:white; font-size:15px; cursor:pointer;">
            Đăng nhập
        </button>
    </form>
</div>

<style>
    .login-box {
        max-width: 380px;
        margin: auto;
        background: #ffffff;
        padding: 30px;
        text-align: center;
        font-family: Arial, sans-serif;
    }

        .login-box h2 {
            margin-bottom: 20px;
            font-size: 22px;
            font-weight: bold;
            color: #333;
        }

    .form-group {
        text-align: left;
        margin-bottom: 15px;
    }

        .form-group label {
            display: block;
            margin-bottom: 6px;
            font-size: 14px;
            color: #555;
        }

    .form-control {
        width: 100%;
        padding: 10px 12px;
        border: 1px solid #ddd;
        border-radius: 8px;
        font-size: 14px;
    }

        .form-control:focus {
            border-color: #007bff;
            outline: none;
            box-shadow: 0 0 3px rgba(0,123,255,0.5);
        }

    .btn-login {
        width: 100%;
        padding: 10px;
        background: #007bff;
        border: none;
        border-radius: 8px;
        color: white;
        font-size: 15px;
        cursor: pointer;
        transition: background 0.3s ease;
    }

        .btn-login:hover {
            background: #0056b3;
        }

    .error-message {
        color: #d9534f;
        font-size: 14px;
        margin-bottom: 15px;
    }
</style>
